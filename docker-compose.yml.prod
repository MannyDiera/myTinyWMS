version: '2'
services:
  app:
    container_name: wms_app
    hostname: app
    image: eagledata/mytinywms
    links:
    - db
    - redis
    ports:
    - 80:80
    env_file:
  	- ./.env
    volumes:
    - ./data/storage:/data/www/storage
    - ./data/cache:/data/www/bootstrap/cache

  db:
    container_name: wms_db
    image: mariadb:10.2
    env_file:
	- ./.env
    volumes:
    - ./data/db:/var/lib/mysql

  redis:
    container_name: wms_redis
    image: redis